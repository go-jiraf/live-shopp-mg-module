<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
  <table name="gojiraf_webhook_configs" resource="default" engine="innodb" comment="GoJiraf Live Shopping webhooks configurations">
    <column xsi:type="int" name="id" unsigned="false" nullable="false" identity="true" />
    <column xsi:type="text" name="topic" nullable="false" />
    <column xsi:type="text" name="url" nullable="false" />
    <constraint xsi:type="primary" referenceId="PRIMARY">
      <column name="id" />
    </constraint>
  </table>
</schema>